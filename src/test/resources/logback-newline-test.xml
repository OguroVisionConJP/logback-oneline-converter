<configuration>

    <appender name="LIST" class="ch.qos.logback.core.read.ListAppender">
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <conversionRule conversionWord="msg1" converterClass="com.github.roundrop.logging.logback.customizable.MessageConverter">
        <property name="newLineReplaced" value=" ~~ " />
        <property name="hardTabReplaceExec" value="false" />
    </conversionRule>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="LIST" />
    </root>
</configuration>